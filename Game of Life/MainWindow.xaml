<Window x:Class="Game_of_Life.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="Game of Life" Height="450" Width="800" ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid HorizontalAlignment="Right" Margin="56,61,61,56" Background="Silver" VerticalAlignment="Top">
            <Button HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" x:Name="StartBtn" Content="Starten"  Width="75" Click="ButtonStart_Click"/>
            <TextBlock Margin="10,35,10,25" x:Name="TimerTxt">Spiel läuft Seit:</TextBlock>
            <TextBlock Margin="10,70,10,10" x:Name="TimerTxt2">Gestoppt!</TextBlock>
            <TextBlock Margin="10,100,10,10">Maximale Größe:</TextBlock>
            <TextBlock Margin="10,120,10,10" x:Name="x">X:</TextBlock>
            <TextBlock Margin="10,135,10,10" x:Name="y">Y:</TextBlock>
            <TextBlock Margin="10,165,10,10">Aktuelles Element:</TextBlock>
            <TextBlock Margin="10,185,10,10" x:Name="ax">X: ---</TextBlock>
            <TextBlock Margin="10,200,10,10" x:Name="ay">Y: ---</TextBlock>
        </Grid>
        <Canvas x:Name="Spielfeld" ClipToBounds="False" Margin="43,37,203,43" />
    </Grid>
</Window>
