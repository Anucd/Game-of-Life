        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="Game of Life" Height="450" Width="800" ContentRendered="Window_ContentRendered">
    <Grid>
        <Canvas x:Name="Playfield" Width="320" Height="180" ClipToBounds="True" />
        <Button Content="Start!" HorizontalAlignment="Left" Margin="56,61,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStart_Click"/>
    </Grid>
</Window>
